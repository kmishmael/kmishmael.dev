---
import TableOfContents from "../components/TableOfContents.astro";
import { SEO } from "astro-seo";

import BaseLayout from "./BaseLayout.astro";
const { frontmatter, headings, url } = Astro.props;
---

<div transition:name=`media-image-${url}`>
  <BaseLayout
    pageTitle=`${frontmatter.title} | Kibet Ismael`
    sImage=`https://kmishmael.tech/og/${url.split('/')[url.split('/').length - 1]}.png`
    sType="article"
    sDescription={frontmatter.description}
    sTitle=`${frontmatter.title} | Kibet Ismael`
  >
    <div class="relative">
      <div
        class="absolute inset-0 bg-black/5 dark:bg-white/5 -z-10 rounded-lg h-[300px]"
      >
      </div>

      <article class="max-w-3xl mx-auto pt-12 px-4 sm:px-6">
        <!-- Reading time estimate would go here -->
        <div class="mb-6 flex items-center justify-between">
          <div class="flex flex-wrap gap-2">
            {
              frontmatter.tags.map((tag: any) => (
                <a
                  href={`/tags/${tag}`}
                  class="px-3 py-1 text-sm rounded-full border border-black/30 dark:border-white/30 bg-transparent text-black dark:text-white hover:bg-black/5 dark:hover:bg-white/5 transition-colors duration-200"
                >
                  #{tag}
                </a>
              ))
            }
          </div>
          <span
            class="text-sm text-black/70 dark:text-white/70 hidden md:block"
          >
            ~{Math.ceil(frontmatter.title.split(" ").length / 2)} min read
          </span>
        </div>

        <h1
          class="text-3xl md:text-5xl font-bold mb-6 text-black dark:text-white leading-tight tracking-tight"
        >
          {frontmatter.title}
        </h1>

        <div
          class="flex items-center mb-10 text-black/80 dark:text-white/80 border-b border-black/10 dark:border-white/10 pb-6"
        >
          <img
            src="/images/kibet.jpeg"
            alt="Author"
            class="w-12 h-12 rounded-full mr-4 border border-black/20 dark:border-white/20 object-cover shadow-sm"
          />
          <div class="flex flex-col md:flex-row md:items-center md:gap-4">
            <p class="font-medium text-base">Kibet Ismael</p>
            <p class="text-sm flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              {
                new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "2-digit",
                })
              }
            </p>
          </div>
        </div>

        {
          frontmatter.description && (
            <p class="text-xl mb-8 text-black/80 dark:text-white/80 font-light italic border-l-4 border-black dark:border-white pl-4 py-1">
              {frontmatter.description}
            </p>
          )
        }
        <div class="grid grid-cols-12 gap-6 md:gap-12">
          <div
            class="md:col-span-9 col-span-12 order-last md:order-first prose prose-lg dark:prose-invert prose-headings:font-bold prose-headings:tracking-tight prose-a:text-black dark:prose-a:text-white hover:prose-a:underline prose-a:no-underline prose-img:rounded-lg prose-img:shadow-sm max-w-none prose-pre:border prose-pre:border-black/10 dark:prose-pre:border-white/10 prose-blockquote:border-l-4 prose-blockquote:border-black dark:prose-blockquote:border-white prose-blockquote:pl-6 prose-blockquote:italic"
          >
            <slot />

            <!-- Post footer navigation -->
            <div
              class="mt-16 pt-8 border-t border-black/10 dark:border-white/10 flex justify-between text-black/70 dark:text-white/70 not-prose"
            >
              <a
                href="/blog"
                class="flex items-center gap-2 hover:text-black dark:hover:text-white transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="m15 18-6-6 6-6"></path>
                </svg>
                Back to all posts
              </a>
              <div class="flex gap-4">
                <a
                  href="#"
                  class="hover:text-black dark:hover:text-white transition-colors"
                  aria-label="Share on Twitter"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.054 10.054 0 01-3.127 1.195 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                    ></path>
                  </svg>
                </a>
                <a
                  href="#"
                  class="hover:text-black dark:hover:text-white transition-colors"
                  aria-label="Share on LinkedIn"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                    ></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <aside class="md:col-span-3 col-span-12 md:sticky md:top-24 h-fit">
            <div
              class="p-5 rounded-lg border border-black/10 dark:border-white/10 bg-white dark:bg-black mb-8"
            >
              <h3
                class="font-bold text-lg mb-4 text-black dark:text-white flex items-center gap-2"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"
                  ></path>
                </svg>
                Table of Contents
              </h3>
              <div class="space-y-2">
                <TableOfContents headings={headings} />
              </div>
            </div>

            <!-- Author card for mobile -->
            <div
              class="md:hidden p-5 rounded-lg border border-black/10 dark:border-white/10 bg-white dark:bg-black mb-6"
            >
              <p class="font-bold text-lg mb-3 text-black dark:text-white">
                About the author
              </p>
              <div class="flex items-center gap-3">
                <img
                  src="/images/kibet.jpeg"
                  alt="Author"
                  class="w-10 h-10 rounded-full border border-black/20 dark:border-white/20 object-cover"
                />
                <div>
                  <p class="font-medium">Kibet Ismael</p>
                  <p class="text-sm text-black/70 dark:text-white/70">
                    Software Developer
                  </p>
                </div>
              </div>
            </div>

            <!-- Related posts would go here -->
          </aside>
        </div>
      </article>
    </div>
  </BaseLayout>
</div>
