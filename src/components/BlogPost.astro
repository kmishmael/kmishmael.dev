---
const { title, url, pubDate, tags } = Astro.props;
// toString().slice(0,10)
---

<li class="mb-6">
  <div class="card p-4 md:p-6 hover-lift">
    <a href={url} class="no-underline">
      <h3
        class="text-xl font-bold mb-2 text-black dark:text-white hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
      >
        {title}
      </h3>

      <p class="text-sm text-black dark:text-white mb-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="inline-block h-4 w-4 mr-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
          ></path>
        </svg>
        {
          new Date(pubDate).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "2-digit",
          })
        }
      </p>

      <div class="flex flex-row flex-wrap gap-2">
        {
          tags &&
            tags.map((tag: any) => (
              <span class="px-2 py-1 text-xs font-medium rounded-full border border-gray-300 dark:border-gray-600 bg-transparent text-black dark:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
                <a href={`/tags/${tag}`} class="no-underline">
                  #{tag}
                </a>
              </span>
            ))
        }
      </div>
    </a>
  </div>
</li>
