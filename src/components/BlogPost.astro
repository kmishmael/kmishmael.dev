---
const { title, url, pubDate, tags } = Astro.props;
// toString().slice(0,10)
---

<li>
  <div class="flex flex-col gap-2">
    <a class="font-semibold link-underline hover:text-primaryw-fit" href={url}>{title}</a>
    <div class="flex flex-row gap-3">
      <p class="font-medium text-sm text-neutral-700">
        {
          new Date(pubDate).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "2-digit",
          })
        }
      </p>
      <div class="flex flex-row gap-4">
        {
          tags && tags.map((tag: any) => (
            <p class="tag px-2 bg-secondary text-primary duration-150 ease-in transition-colors hover:bg-primary hover:text-white rounded-sm">
              <a class="m-0 p-0" href={`/tags/${tag}`}>#{tag}</a>
            </p>
          ))
        }
      </div>
    </div>
  </div>
</li>
