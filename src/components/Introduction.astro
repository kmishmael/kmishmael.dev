---
const name = "Kibet";
const description =
  "I am a Software Developer, who is passionate about building user friendly and beautiful applications on the internet";

const skills = [
  "JavaScript",
  "TypeScript",
  "React",
  "Node.js",
  "Python",
  "Astro",
];
---

<div class="flex flex-col-reverse md:flex-row gap-10 py-8 items-center">
  <div class="flex-1 space-y-6">
    <div>
      <p class="text-primary font-medium mb-2">Welcome to my portfolio</p>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold gradient-text mb-4">
        Hey, I'm <span class="gradient-text">{name}</span> ðŸ‘‹
      </h1>
      <p class="text-lg md:text-xl text-black dark:text-white mb-6 max-w-2xl">
        {description}
      </p>
    </div>
    <div class="flex flex-wrap gap-2">
      {
        skills.map((skill) => (
          <span class="px-3 py-1 rounded-full text-sm font-medium border border-black dark:border-white bg-transparent text-black dark:text-white">
            {skill}
          </span>
        ))
      }
    </div>

    <div class="flex gap-4 pt-4">
      <a
        href="/about"
        class="px-6 py-3 rounded-lg bg-black dark:bg-white text-white dark:text-black hover:bg-black/90 dark:hover:bg-white/90 transition-all duration-200 hover-lift font-medium"
      >
        About Me
      </a>
      <a
        href="/blog"
        class="px-6 py-3 rounded-lg border border-black dark:border-white text-black dark:text-white hover:bg-black/10 dark:hover:bg-white/10 transition-all duration-200 hover-lift font-medium"
      >
        Read My Blog
      </a>
    </div>
  </div>

  <div class="relative w-48 h-48 md:w-64 md:h-64 flex-shrink-0">
    <div
      class="absolute inset-0 rounded-full bg-black dark:bg-white blur-[40px] opacity-10"
    >
    </div>
    <img
      src="/images/kibet.jpeg"
      alt="Kibet Ismael"
      class="object-cover w-full h-full rounded-full border-2 border-black dark:border-white z-10 relative hover-lift"
    />
  </div>
</div>
