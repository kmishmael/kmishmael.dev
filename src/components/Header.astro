---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="h-20 relative">
  <nav
    class="sticky top-0 z-[100] w-full transition-colors duration-300 dark:bg-dark-bg/90 bg-white/90 backdrop-blur-lg border-b border-gray-200 dark:border-gray-800"
  >
    <div
      class="max-w-7xl mx-auto flex justify-between items-center px-4 py-3 sm:px-8"
    >
      <a href="/" class="text-2xl font-bold">
        <span class="gradient-text">KM</span><span
          class="hidden md:inline text-black dark:text-white">ishmael</span
        >
      </a>
      <div class="flex items-center">
        <Navigation />
        <div class="ml-4">
          <ThemeToggle />
        </div>
      </div>
    </div>
  </nav>
</header>
