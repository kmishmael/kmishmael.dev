---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/blog/*.md");
const pageTitle = "Blog | Kibet Ismael";
import { SEO } from "astro-seo";
import { slide } from "astro:transitions";
---

<div>
  <BaseLayout
    pageTitle={pageTitle}
    sTitle="Kibet Ismael"
    sDescription="Kibet Ismael | Software Developer and Engineer."
  >
    <div class="py-8 flex flex-col gap-4 items-start">
      <div class="flex items-center mb-6">
        <div class="h-8 w-1 bg-black dark:bg-white mr-3"></div>
        <h1 class="text-3xl md:text-4xl font-bold text-black dark:text-white">
          All Articles
        </h1>
      </div>
      <p class="text-black dark:text-white mb-8 max-w-2xl">
        Here you'll find all my thoughts, tutorials, and insights on software
        development, technology, and more.
      </p>

      <div class="w-full mb-8">
        <div class="relative">
          <input
            type="text"
            placeholder="Search articles..."
            class="w-full p-3 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-black text-black dark:text-white focus:ring-2 focus:ring-black dark:focus:ring-white focus:border-transparent"
          />
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 absolute right-3 top-1/2 transform -translate-y-1/2 text-black/60 dark:text-white/60"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>

      <ul class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full">
        {
          allPosts.map((post) => (
            <BlogPost
              mediaTransitionName={`media-image-${post.url}`}
              url={post.url}
              pubDate={post.frontmatter.pubDate}
              tags={post.frontmatter.tags}
              title={post.frontmatter.title}
            />
          ))
        }
      </ul>
    </div>
  </BaseLayout>
</div>
