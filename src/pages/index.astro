---
import BaseLayout from "../layouts/BaseLayout.astro";
import Introduction from "../components/Introduction.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/blog/*.md");
import { SEO } from "astro-seo";
import { slide } from "astro:transitions";

const pageTitle = "Home | Kibet Ismael";
---

<div>
  <BaseLayout pageTitle={pageTitle}>
    <SEO
      title="Kibet Ismael"
      description="Kibet Ismael | Software Developer and Engineer."
      openGraph={{
        basic: {
          title: "Kibet Ismael",
          type: "website",
          image: "https://kmishmael.tech/images/landing-frame.png",
        },
      }}
      twitter={{
        creator: "@kmishmael20",
        card: "summary_large_image",
      }}
    />
    <br />
    <Introduction />
    <div class="py-12 grid grid-cols-12 gap-8">
      <div class="md:col-span-8 col-span-12">
        <div class="flex items-center mb-6">
          <div class="h-8 w-1 bg-black dark:bg-white mr-3"></div>
          <h2 class="text-2xl md:text-3xl font-bold text-black dark:text-white">
            Latest Articles
          </h2>
        </div>

        <ul class="space-y-4">
          {
            allPosts
              .slice(0, 6)
              .map((post: any) => (
                <BlogPost
                  url={post.url}
                  pubDate={post.frontmatter.pubDate}
                  tags={post.frontmatter.tags}
                  title={post.frontmatter.title}
                />
              ))
          }
        </ul>

        <div class="mt-8">
          <a
            class="inline-flex items-center px-5 py-2.5 rounded-lg border border-primary text-primary hover:bg-primary/10 transition-all duration-200 hover-lift font-medium"
            href="/blog"
          >
            Show all articles
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="ml-1 h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <div class="md:col-span-4 col-span-12">
        <div class="card p-6">
          <div class="flex items-center mb-6">
            <div class="h-6 w-1 bg-gradient-to-b from-primary to-blue-500 mr-3">
            </div>
            <h2 class="text-xl font-bold gradient-text">Featured Projects</h2>
          </div>

          <ul class="space-y-4">
            <li class="card p-4 hover-lift">
              <a
                href="https://github.com/kmishmael/sensorgrove"
                class="block no-underline"
                target="_blank"
                rel="noopener"
              >
                <div class="flex items-center">
                  <img
                    src="/images/sensorgrove.png"
                    alt="SensorGrove"
                    class="w-12 h-12 rounded-md mr-3"
                  />
                  <div>
                    <h3 class="font-bold text-gray-800 dark:text-gray-100">
                      SensorGrove
                    </h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      IoT sensor monitoring system
                    </p>
                  </div>
                </div>
              </a>
            </li>

            <li class="card p-4 hover-lift">
              <a
                href="https://github.com/kmishmael/healthpal"
                class="block no-underline"
                target="_blank"
                rel="noopener"
              >
                <div class="flex items-center">
                  <img
                    src="/images/healthpal.jpg"
                    alt="HealthPal"
                    class="w-12 h-12 rounded-md mr-3"
                  />
                  <div>
                    <h3 class="font-bold text-gray-800 dark:text-gray-100">
                      HealthPal
                    </h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                      Health monitoring application
                    </p>
                  </div>
                </div>
              </a>
            </li>
          </ul>

          <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-800">
            <a
              href="https://github.com/kmishmael"
              class="flex items-center justify-center w-full py-2 text-primary hover:underline"
              target="_blank"
              rel="noopener"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-2"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
              View more on GitHub
            </a>
          </div>
        </div>
      </div>
    </div>
  </BaseLayout>
</div>
